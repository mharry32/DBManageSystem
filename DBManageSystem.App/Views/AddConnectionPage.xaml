<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DBManageSystem.App.Views.AddConnectionPage"
             Title="AddConnectionPage">
    <VerticalStackLayout>
        <Frame HasShadow="false"
                      Padding="10"
                      BorderColor="Gray"
                      Margin="30,30,30,10"
                      Grid.Row="1"
                      Grid.Column="0"
                      Grid.ColumnSpan="3">
            <StackLayout Orientation="Horizontal"
                               Spacing="20">
                <Label Text="Server URL:" VerticalOptions="Center"/>
                <Entry Text="{Binding ConnectionUrl}" Margin="10,0,0,0" HorizontalOptions="FillAndExpand" ClearButtonVisibility="WhileEditing"/>

            </StackLayout>
        </Frame>
    </VerticalStackLayout>
        
</ContentPage>